	<modelVersion>4.0.0</modelVersion>
	<groupId>io.autonomx</groupId>
	<artifactId>autonomxCore</artifactId>
	<version>1.0.4.5</version>
	<packaging>jar</packaging>
	<build>
		<sourceDirectory>src</sourceDirectory>
		<plugins>
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.8.0</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>

			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-source-plugin</artifactId>
				<version>3.0.1</version>
				<executions>
					<execution>
						<id>attach-sources</id>
						<!--skip source code. remove attached-source <configuration> <skipSource>true</skipSource> 
							</configuration> -->
						<goals>
							<goal>jar</goal>
						</goals>
					</execution>
				</executions>
			</plugin>

			<plugin>
				<artifactId>maven-antrun-plugin</artifactId>
				<executions>
					<execution>
						<id>export-pom</id>
						<phase>package</phase>
						<goals>
							<goal>run</goal>
						</goals>
						<configuration>
							<target name="Exporting POM">
								<copy file="${basedir}/pom.xml"
									tofile="${project.build.outputDirectory}/../${project.build.finalName}.pom" />
								<copy file="${basedir}/pom.xml"
									tofile="${project.build.outputDirectory}/../${project.build.finalName}-tests.pom" />
							</target>
						</configuration>
					</execution>
				</executions>
			</plugin>
		</plugins>
	</build>

